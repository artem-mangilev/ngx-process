{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "ngx-process": ["projects/ngx-process/src/public_api"],
      "ngx-process/*": ["projects/ngx-process/src/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  }
}
